SOC=$(awk '/SoC.*:/ {printf "%s", $3}' /proc/cpuinfo)

if [ -n "$SOC" ]; then
  mkdir -p /var/lib/firmware
  ln -sfn /usr/lib/ta/${SOC} /var/lib/teetz
  ln -sfn ${SOC}/video_ucode.bin /lib/firmware/video/video_ucode.bin
fi
